@model CarsCRUD.Models.Car
@using Microsoft.AspNetCore.Mvc.Localization
@using CarsCRUD.Services;
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = "Edit";
}

<h1>@SharedLocalizer["Header"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarID" />
            <div class="form-group">
                <label>@SharedLocalizer["CarName"]</label>
                <input asp-for="CarName" class="form-control" />
                <span asp-validation-for="CarName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@SharedLocalizer["CarDesc"]</label>
                <input asp-for="CarDesc" class="form-control" />
                <span asp-validation-for="CarDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@SharedLocalizer["CarPrice"]</label>
                <input asp-for="CarPrice" class="form-control" />
                <span asp-validation-for="CarPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["SaveButton"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn">@SharedLocalizer["BackButton"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
