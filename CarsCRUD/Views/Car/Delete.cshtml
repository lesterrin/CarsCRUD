@model CarsCRUD.Models.Car
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Delete";
}

<h1>@Localizer["Header"]</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label>@Localizer["CarName"]</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarName)
        </dd>
        <dt class="col-sm-2">
            <label>@Localizer["CarDesc"]</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarDesc)
        </dd>
        <dt class="col-sm-2">
            <label>@Localizer["CarPrice"]</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarPrice)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CarID" />
        <input type="submit" value="@Localizer["DeleteButton"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["BackButton"]</a>
    </form>
</div>
