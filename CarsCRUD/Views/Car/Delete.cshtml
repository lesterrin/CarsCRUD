@model CarsCRUD.Models.Car
@using Microsoft.AspNetCore.Mvc.Localization
@using CarsCRUD.Services;
@inject IHtmlLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = "Delete";
}

<h1>@SharedLocalizer["Header"]</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label>@SharedLocalizer["CarName"]</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarName)
        </dd>
        <dt class="col-sm-2">
            <label>@SharedLocalizer["CarDesc"]</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarDesc)
        </dd>
        <dt class="col-sm-2">
            <label>@SharedLocalizer["CarPrice"]</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarPrice)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CarID" />
        <input type="submit" value="@SharedLocalizer["DeleteButton"]" class="btn btn-danger" /> |
        <a asp-action="Index">@SharedLocalizer["BackButton"]</a>
    </form>
</div>
