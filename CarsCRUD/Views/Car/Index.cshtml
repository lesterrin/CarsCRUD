@model IEnumerable<CarsCRUD.Models.Car>
@using Microsoft.AspNetCore.Mvc.Localization 
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Index";

}

<h1>@Localizer["Header"]</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
               <h6>@Localizer["CarName"]</h6>
            </th>
            <th>
                <h6>@Localizer["CarDesc"]</h6>
            </th>
            <th>
                <h6>@Localizer["CarPrice"]</h6>
            </th>
            <th>
                <a asp-action="Create" class="btn">@Localizer["CreateButton"]</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CarName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarPrice)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CarID" class="btn">@Localizer["DetButton"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
